<body>
	
	<div class="container" id="board-container">
		<h1>Tic-Tac-Toe</h1>
		<% for $i in 1..3 %>
		<div class="row">
			<% for $j in 1..3 %>
								<%= form_for :game do |f| %>
								  <% f.hidden_field :cell_id, :value => $i * 3 + $j %>
								  <% f.submit '', :class => 'col-lg-4 col-xs-4 col-sm-4 col-md-4' %>
								<% end %>
			<% end %>
		</div>
		<% end %>

	</div>
</body>