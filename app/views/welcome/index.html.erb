<head>
</head>
<body>
	
	<div class="container" id="board-container">
		<h1>Tic-Tac-Toe</h1>
		<% for $i in 1..3 %>
		<div class="row">
			<% for $j in 1..3 %>
			<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
			</div>
			<% end %>
		</div>
		<% end %>

		<div class="btn-group" style="margin-top: 50px;">
			<button class="btn btn-default btn-lg dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
				New Game <span class="caret"></span>
			</button>
			<ul class="dropdown-menu" role="menu">
				<% @singlegame = Singlegame.new %>
				<% @singlegame.status = "000000000" %>
				<% @singlegame.turn = 0 %>
				<% @singlegame.save %>
				<li><%= link_to "Quick Start", @singlegame %></li>
				<% @multigame = Multigame.new %>
				<% @multigame.status = "000000000" %>
				<% @multigame.turn = 0 %>
				<% @multigame.save %>
				<li><%= link_to "Multiplayer", @multigame %></li>
			</ul>
			</div>

		</div>
	</body>